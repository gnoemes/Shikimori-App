<resources>

    <!-- Base application theme. -->
    <style name="AppThemeLight" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorText">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="coordinatorLayoutStyle">@style/Widget.Design.CoordinatorLayout</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="cardViewStyle">@style/CardViewLightStyle</item>
        <item name="colorDivider">@color/red</item>
        <item name="colorDividerTransparent">@color/red_transparent</item>
        <item name="colorAccentTransparent">@color/colorAccentTransparent</item>
        <item name="colorBackgroundContent">@color/colorAccent</item>
        <item name="colorBackgroundWindowInverse">@color/colorBackgroundInverse</item>
        <item name="colorBackgroundWindow">@color/colorBackground</item>
        <item name="colorTextInverse">@color/white</item>
        <item name="colorControlHighlight">@color/colorAccentTransparent</item>
        <item name="colorAction">@color/bittersweet</item>
    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryInverse</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkInverse</item>
        <item name="colorAccent">@color/colorAccentInverse</item>
        <item name="colorText">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="coordinatorLayoutStyle">@style/Widget.Design.CoordinatorLayout</item>
        <item name="android:windowBackground">@color/colorBackgroundInverse</item>
        <item name="cardViewStyle">@style/CardViewDarkStyle</item>
        <item name="colorDivider">@color/colorAccentInverse</item>
        <item name="colorDividerTransparent">@color/colorAccentTransparentInverse</item>
        <item name="colorAccentTransparent">@color/colorAccentTransparentInverse</item>
        <item name="colorBackgroundContent">@color/colorPrimaryDarkInverse</item>
        <item name="colorBackgroundWindowInverse">@color/colorBackground</item>
        <item name="colorBackgroundWindow">@color/colorBackgroundInverse</item>
        <item name="colorTextInverse">@color/black</item>
        <item name="colorControlHighlight">@color/colorAccentTransparentInverse</item>
        <item name="colorAction">@color/colorAccentInverse</item>
    </style>

    <style name="PopupMenuTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">?attr/colorTextInverse</item>
        <item name="android:textColor">?attr/colorText</item>
    </style>

    <style name="ToolbarTextAppearance">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CardViewLightStyle" parent="CardView">
        <item name="cardBackgroundColor">@color/colorAccent</item>
    </style>

    <style name="CardViewDarkStyle" parent="CardView">
        <item name="cardBackgroundColor">@color/colorPrimaryDarkInverse</item>
    </style>

    <style name="BottomBarStyle">
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="TransparentText">
        <item name="android:textColor">#00000000</item>
        <item name="android:textSize">0sp</item>
    </style>

    <style name="RatingBarTheme" parent="Theme.AppCompat">
        <item name="colorControlNormal">?attr/colorBackgroundWindowInverse</item>
        <item name="colorControlActivated">@color/colorAccentInverse</item>
    </style>

</resources>
