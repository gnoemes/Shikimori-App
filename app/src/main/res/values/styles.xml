<resources>

    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="preferenceTheme">@style/PreferenceAppTheme</item>
        <!--<item name="android:dropDownListViewStyle">@style/SpinnerStyle</item>-->
    </style>

    <!-- Base application theme. -->
    <style name="AppThemeLight" parent="BaseAppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorText">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="cardViewStyle">@style/CardViewLightStyle</item>
        <item name="colorDivider">@color/red</item>
        <item name="colorDividerTransparent">@color/red_transparent</item>
        <item name="colorAccentTransparent">@color/colorAccentTransparent</item>
        <item name="colorBackgroundContent">#ffffff</item>
        <item name="colorBackgroundWindowInverse">@color/colorBackgroundInverse</item>
        <item name="colorBackgroundWindow">@color/colorBackground</item>
        <item name="colorTextInverse">@color/white</item>
        <item name="colorControlHighlight">@color/gray_transparent</item>
        <item name="colorAction">@color/bittersweet</item>
        <item name="colorBottom">#fafafa</item>
        <item name="colorBottomAccent">@color/colorPrimary</item>
        <item name="colorBottomDark">#c7c7c7</item>
        <item name="colorTextTransparent">@color/black_overlay</item>
    </style>

    <style name="AppThemeDark" parent="BaseAppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryInverse</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkInverse</item>
        <item name="colorAccent">@color/colorAccentInverse</item>
        <item name="colorText">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:windowBackground">@color/colorBackgroundInverse</item>
        <item name="cardViewStyle">@style/CardViewDarkStyle</item>
        <item name="colorDivider">@color/colorAccentInverse</item>
        <item name="colorDividerTransparent">@color/colorAccentTransparentInverse</item>
        <item name="colorAccentTransparent">@color/colorAccentTransparentInverse</item>
        <item name="colorBackgroundContent">@color/colorPrimaryDarkInverse</item>
        <item name="colorBackgroundWindowInverse">@color/colorBackground</item>
        <item name="colorBackgroundWindow">@color/colorBackgroundInverse</item>
        <item name="colorTextInverse">@color/black</item>
        <item name="colorControlHighlight">@color/colorAccentTransparentInverse</item>
        <item name="colorAction">@color/colorAccentInverse</item>
        <item name="colorBottom">@color/colorPrimaryInverse</item>
        <item name="colorBottomAccent">@color/colorAccentInverse</item>
        <item name="colorBottomDark">@color/colorPrimaryDarkInverse</item>
        <item name="colorTextTransparent">@color/gray_transparent</item>
    </style>

    <style name="PreferenceAppTheme" parent="PreferenceThemeOverlay">
        <item name="colorAccent">?attr/colorAction</item>
        <item name="android:windowBackground">?attr/colorBackgroundWindow</item>
        <item name="colorPrimary">?attr/colorPrimary</item>
        <item name="colorPrimaryDark">?attr/colorPrimaryDark</item>
        <item name="android:textColor">?attr/colorText</item>
    </style>

    <style name="PopupMenuTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">?attr/colorBackgroundWindow</item>
        <item name="android:textColor">?attr/colorText</item>
    </style>

    <style name="ToolbarTextAppearance">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SpinnerStyle" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:dividerHeight">1dp</item>
        <item name="android:divider">?attr/colorAccent</item>
    </style>

    <style name="CardViewLightStyle" parent="CardView">
        <item name="cardBackgroundColor">@color/colorPrimaryDark</item>
    </style>

    <style name="CardViewDarkStyle" parent="CardView">
        <item name="cardBackgroundColor">@color/colorPrimaryDarkInverse</item>
    </style>

    <style name="BottomBarStyle">
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="TransparentText">
        <item name="android:textColor">#00000000</item>
        <item name="android:textSize">0sp</item>
    </style>

    <style name="RatingBarTheme" parent="Theme.AppCompat">
        <item name="colorControlNormal">?attr/colorBackgroundWindowInverse</item>
        <item name="colorControlActivated">@color/colorAccentInverse</item>
    </style>

    <style name="ExpandedTextAppearence">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ScreenshotTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>
